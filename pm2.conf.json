{
    "apps": {
        "name": "analysis",
        "script": "bin/www",
        "watch": true,
        "ignore_watch": [
            "node_modules",
            "logs",
            "uploadFiles",
            "src/logger/logs"
        ],
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "exec_mode": "cluster",
        "instances": 1,
        "max_memory_restart": "2G",
        "autorestart": true,
        "instance_var": "isMaster",
        "merge_logs": true 
    }
}